//Snacks

mixin class UaS_VirSnacks {
	default {
		UaS_Consumable.Calories 250;
		UaS_Consumable.Fluid 0;
		UaS_Consumable.Bulk 6;
		+UaS_Consumable.PACKAGED;
		Inventory.PickupMessage "Picked up a sealed pouch with snacks!";
		scale 0.4;
	}
}


